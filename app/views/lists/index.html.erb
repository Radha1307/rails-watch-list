<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Lists</h1>

  <table>
    <thead>
      <tr>
        <th>Movie</th>
        <th>Content</th>
        <th>Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= link_to 'Show', list %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New List', new_list_path %>
</div>
